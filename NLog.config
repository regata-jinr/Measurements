    <target name="database" xsi:type="Database" dbProvider="Npgsql.NpgsqlConnection, Npgsql" connectionString="${gdc:item=LogConnectionString}" commandText="insert into measurements(date_time, level, userId, callingSite, iName, message) 
                         values(NOW()::timestamp, @level, @userId, @calSite, @iName, @message)">
      <parameter name="@level"     layout="${uppercase:${level}}" />
      <parameter name="@userId"    layout="${event-properties:item=UserId}" />
      <parameter name="@calSite"    layout="${callsite:includeNamespace=False:className=True:fileName=False:includeSourcePath=False:methodName=True}" />
      <parameter name="@iName"    layout="${event-properties:item=Name}" />
      <parameter name="@message"   layout="${message}" />
    </target>
  </targets> 
 -->
  
  <rules>
    <logger name="*" minlevel="Info" writeTo="logFile" />
    <logger name="*" minlevel="Info" writeTo="database" />
  </rules>
</nlog>
